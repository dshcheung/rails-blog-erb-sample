<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-xs-12">
    <p><%= @post.content %></p>
    <p>by: <%= @post.user.email %></p>
  </div>
</div>

<% if current_user.present? %>
  <a class="btn btn-danger" href="<%= edit_post_path(@post) %>">Edit</a>
<% end %>
<a class="btn btn-primary" href="<%= posts_path %>">Back to Index</a>
